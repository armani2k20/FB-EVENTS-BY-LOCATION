<html>

<head>
    <!--METADATA-->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />
    <!--STYLESHEET-->
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="icon" type="image/png" href="images/favicon.ico">
    <!--  Scripts-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="js/materialize.min.js"></script>
    <!--TITLE-->
    <title>facebook-event-search</title>
</head>

<body role="body">
    <head role="head">
        <!-- NAVIGATION -->
        <nav role="navigation">
            <div class="nav-wrapper">
                <a href="#!" class="brand-logo">
                    <h1>facebook
                        <div id="title">events</div>
                    </h1>
                </a>
            </div>
        </nav>
    </head>
    <main role="main">
        <h2>Search Events</h2>
                <form>
                    <div class="input-field">
                        <input id="search" type="text" placeholder="Enter your address here" required>
                    </div>
                    <button id="submitSearch" class="btn waves-effect waves-light" type="submit" name="action">Find Event</button>
                </form>
        <div class="row">
            <div class="col s12 m6 l6">
                <h5>Event Location</h5>
                <!-- EVENTS ON MAP -->
                <div id="map"></div>
            </div>
            <div class="col s12 m6 l6">
                <h5>Events Near You</h5>
                <!-- EVENTS TABLE -->
                <div id="table-wrapper">
                    <div id="table-scroll">
                        <table>
                            <thead>
                                <tr>
                                    <th data-field="name">Event</th>
                                    <th data-field="name">Venue</th>
                                    <th data-field="name">Date</th>
                                </tr>
                            </thead>

                            <tbody id="tableBody">

                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- MODAL -->
                <div id="modal1" class="modal modal-fixed-footer">
                    <div class="modal-content">
                        <h4 id="modalHeader"></h4>
                        <div id="modalText"></div>
                    </div>
                    <div class="modal-footer">
                        <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">OK</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- FOOTER -->
    <footer role="footer">
        <div class="container">
            Â© 2016 Armani Stewart, facebook-event-search, All rights reserved
            <a href="https://icons8.com">Icon pack by Icons8</a>
        </div>
    </footer>
    <script src="js/moment.js"></script>
    <script src="js/init.js"></script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=APPKEY&callback=initMap"
        type="text/javascript"></script>
</body>

</html>